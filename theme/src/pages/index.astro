---
import {
Button,
CtaCardSection
} from '@littlesticks/odyssey-theme-components';
import { Icon } from 'astro-icon';
import CustomerQuoteSection from "../components/sections/CustomerQuoteSection.astro";
import TextAndImageHero from '../components/sections/heros/TextAndImageHero.astro';
import StickyTextImageSection from "../components/sections/StickyTextImageSection.astro";
import Layout from '../layouts/Page.astro';

const seo = {
  title: 'Home | MiNa Designs',
  description:
    'Home | MiNa Designs. Bring a splash of color to your next party!',
};
---
<Layout {seo}>
  <TextAndImageHero>
    <picture slot="image-container">
      <img
        sizes="(max-width: 885px) 100vw, 885px"
        srcset="
        /assets/images/balloons/balloons-landing_rs3qok_c_scale,w_200.webp 200w,
        /assets/images/balloons/balloons-landing_rs3qok_c_scale,w_496.webp 496w,
        /assets/images/balloons/balloons-landing_rs3qok_c_scale,w_534.webp 534w,
        /assets/images/balloons/balloons-landing_rs3qok_c_scale,w_661.webp 661w,
        /assets/images/balloons/balloons-landing_rs3qok_c_scale,w_885.webp 885w"
        src="/assets/images/balloons/balloons-landing_rs3qok_c_scale,w_885.webp"
        alt="A group of colorful watercolor balloons"
        id="home-hero-image"
      />
    </picture>
    <div slot="text-container">
      <h1>Make your party pop!</h1>
      <p>We'll take your party to new heights with our balloon creations.</p>
    </div>
    <div slot="btns-container">
      <Button
        href="/company/contact"
        customIcon
        >
        Get Started <Fragment slot="icon">
          <Icon name="ic:baseline-chevron-right" />
        </Fragment>
      </Button
      >
    </div>
  </TextAndImageHero>

  <CustomerQuoteSection
    quoteText="MiNa Designs's balloon decorations were simply amazing! They added the perfect touch of color and joy to our event. From start to finish, the team was professional and accommodating to all of our needs. Our guests were blown away by the creativity and uniqueness of the balloon designs. We can't thank this company enough for making our special day even more unforgettable."
    customerName="Karen F."
  />

  <StickyTextImageSection>
    <div slot="text-container">
      <h2>Balloon Services</h2>
      <h3>Decorations</h3>
      <p>
        Designing and setting up unique and eye-catching balloon arrangements
        for special events, including birthdays, weddings, corporate events, and
        trade shows. The balloon decorations can include arches, centerpieces,
        columns, and custom installations.
      </p>
      <h3>Delivery</h3>
      <p>
        Delivering pre-arranged bouquets, centerpieces, or gift boxes to a
        location specified by the customer. The balloons can be arranged for a
        variety of occasions, including birthdays, anniversaries, or just
        because!
      </p>
      <h3>Sculpting</h3>
      <p>
        Custom balloon sculptures for events and parties. This can include
        balloon animals, balloon characters, balloon centerpieces, and other
        custom balloon creations. The balloon sculpting service adds a fun and
        interactive element to any event, and is perfect for children's birthday
        parties, corporate events, and trade shows.
      </p>
    </div>
    <picture slot="image-container">
      <img
        sizes="(max-width: 1400px) 100vw, 1400px"
        srcset="
          /assets/images/arch/gender-reveal-arch_whmi8y_c_scale,w_200.webp 200w,
          /assets/images/arch/gender-reveal-arch_whmi8y_c_scale,w_589.webp 589w,
          /assets/images/arch/gender-reveal-arch_whmi8y_c_scale,w_920.webp 920w,
          /assets/images/arch/gender-reveal-arch_whmi8y_c_scale,w_1093.webp 1093w,
          /assets/images/arch/gender-reveal-arch_whmi8y_c_scale,w_1343.webp 1343w,
          /assets/images/arch/gender-reveal-arch_whmi8y_c_scale,w_1400.webp 1400w"
        src="/assets/images/arch/gender-reveal-arch_whmi8y_c_scale,w_1400.webp"
        alt="A balloon arch at a gender reveal party"
        loading="lazy"
      />
    </picture>
  </StickyTextImageSection>

  <CtaCardSection
    background="var(--theme-surface-2)"
    color="var(--theme-on-surface-2)"
  >
    <h2>Get the party started ðŸ¥³</h2>
    <p>Fill out our inquiry, and we'll get back to you as soon as possible.</p>
    <Button href="/company/contact" customIcon
      >Get Started<Fragment slot="icon">
        <Icon name="ic:baseline-chevron-right" />
      </Fragment></Button
    >
  </CtaCardSection>
</Layout>